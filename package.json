{
  "name": "quickscriptbar",
  "displayName": "Quick Script Bar",
  "description": "Instantly run your scripts from the VSCode status bar for faster development.",
  "version": "0.0.1",
  "publisher": "Marcin Domaga≈Ça",
  "engines": {
    "vscode": "^1.6.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:package.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "quickscriptbar.configureScripts",
        "title": "Configure Script in Status Bar",
        "category": "Quick Script Bar"
      },
      {
        "command": "quickscriptbar.runScript",
        "title": "Run Script",
        "category": "Run Script"
      }
    ],
    "keybindings": [
      {
        "command": "quickscriptbar.configureScripts",
        "title": "Configure Script in Status Bar",
        "key": "ctrl+shift+j"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "typescript": "^5.6.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
